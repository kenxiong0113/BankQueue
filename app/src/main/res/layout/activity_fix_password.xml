<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ruan.bankqueue.activity.FixPasswordActivity">
    <!--原密码-->
    <TextView
        style="@style/FixTextView"
        android:text="原始密码"
        android:id="@+id/tv_oldPassword"
        />
    <EditText
        style="@style/FixEditText"
        android:layout_toRightOf="@+id/tv_oldPassword"
        android:id="@+id/et_old"
        android:inputType="textPassword"
        android:maxLength="16"
        />
    <View
        style="@style/RegisterView"
        android:id="@+id/view"
        android:layout_below="@+id/tv_oldPassword"
        />
    <!--新密码-->
    <TextView
        style="@style/FixTextView"
        android:text="新密码"
        android:id="@+id/tv_newPassword"
        android:layout_below="@+id/view"
        />
    <EditText
        style="@style/FixEditText"
        android:layout_alignStart="@+id/et_old"
        android:id="@+id/et_new"
        android:layout_below="@+id/view"
        android:inputType="textPassword"
        android:maxLength="16"
        />
    <View
        style="@style/RegisterView"
        android:id="@+id/view1"
        android:layout_below="@+id/tv_newPassword"
        />
<!--确认密码-->
    <TextView
        style="@style/FixTextView"
        android:text="确认密码"
        android:id="@+id/tv_new1Password"
        android:layout_below="@+id/view1"
        />
    <EditText
        style="@style/FixEditText"
        android:layout_alignStart="@+id/et_old"
        android:id="@+id/et_new1"
        android:layout_below="@+id/view1"
        android:inputType="textPassword"
        android:maxLength="16"
        />
    <View
        style="@style/RegisterView"
        android:id="@+id/view2"
        android:layout_below="@+id/tv_new1Password"
        />

    <Button
        android:id="@+id/btn_fix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="确认修改"
        android:background="@drawable/btn_sharp_blue"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        />

</RelativeLayout>
